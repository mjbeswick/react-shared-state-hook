{
  "include": ["./src/**/*.ts", "src/sharedState.spec.tsx", "src/sharedRef.spec.tsx"],
  "exclude": ["./src/**/__tests__"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "build",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "target": "esnext",
  "module": "commonjs",
}
